            android:layout_height="wrap_content"
            android:text="Date &amp; Time :"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="@dimen/login_btn_txt_size"/>
        <TextView
            android:id="@+id/txtDateTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31-3-2015 11:15:17:4566"
            android:textColor="@android:color/black"
            android:textSize="@dimen/login_btn_txt_size"
            android:layout_toEndOf="@id/lblDateTime"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relLatitudeLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/relDateTime">
        <TextView
            android:id="@+id/txtLatLang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude &amp; Longitude :"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="@dimen/login_btn_txt_size"/>
        <TextView
            android:id="@+id/txtLatitudeLongitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.13456, 77.84567"
            android:textColor="@android:color/black"
            android:textSize="@dimen/login_btn_txt_size"
            android:layout_toEndOf="@id/txtLatLang"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relRainfall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/relLatitudeLongitude">
        <TextView
            android:id="@+id/lblRainfall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rainfall:"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="@dimen/login_btn_txt_size"/>
        <TextView
            android:id="@+id/txtRainfall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textColor="@android:color/black"
            android:textSize="@dimen/login_btn_txt_size"
            android:layout_toEndOf="@id/lblRainfall"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>
