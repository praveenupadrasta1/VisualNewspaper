    <LinearLayout
        android:id="@+id/linGaugeLevels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:baselineAligned="false"
        android:layout_below="@+id/relRainfall">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/relMoistureLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
                <pl.pawelkleczkowski.customgauge.CustomGauge
                    android:id="@+id/gaugeMoistureLevel"
                    android:layout_width="@dimen/gauge_level_size"
                    android:layout_height="@dimen/gauge_level_size"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    />
                <TextView
                    android:id="@+id/lblMoistureValue"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/login_btn_txt_size"
                    style="@android:style/TextAppearance.DeviceDefault.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <TextView
                android:textSize="@dimen/login_btn_txt_size"
                android:textColor="@android:color/black"
                android:id="@+id/lblMoistureLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/mositure_level"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/relMoistureLevel"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <RelativeLayout
                android:id="@+id/relMagnitudeLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
                <pl.pawelkleczkowski.customgauge.CustomGauge
                    android:id="@+id/gaugeMagnitudeLevel"
                    android:layout_width="@dimen/gauge_level_size"
                    android:layout_height="@dimen/gauge_level_size"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    />
                <TextView
