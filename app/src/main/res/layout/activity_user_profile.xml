<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.praveenupadrasta.news.UserProfile.UserProfileActivity"
    android:background="@color/layout_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/layout_background">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_constraint_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:elevation="5dp">
            <TextView
                android:id="@+id/lbl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="67dp"
                android:layout_marginTop="27dp"
                android:text="Name : "
                android:textStyle="bold"
                android:textSize="@dimen/login_btn_txt_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_profile"
                android:layout_marginStart="67dp" />

            <TextView
                android:id="@+id/lbl_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/login_btn_txt_size"
                app:layout_constraintLeft_toRightOf="@+id/lbl_name"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="27dp"
                app:layout_constraintTop_toBottomOf="@+id/lbl_profile"
                android:layout_marginStart="27dp" />

            <TextView
                android:id="@+id/lbl_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="47dp"
                android:textSize="@dimen/login_btn_txt_size"
                android:layout_marginTop="19dp"
                android:text="Location : "
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_name"
                android:layout_marginStart="47dp" />

            <TextView
                android:id="@+id/lbl_location_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/login_btn_txt_size"
                app:layout_constraintLeft_toRightOf="@+id/lbl_location"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="19dp"
                app:layout_constraintTop_toBottomOf="@+id/lbl_name_value"
                android:layout_marginStart="24dp" />

            <TextView
                android:id="@+id/lbl_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="21dp"
                android:textSize="@dimen/login_btn_txt_size"
                android:text="Address : "
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_location"
                android:layout_marginStart="49dp" />

            <TextView
                android:id="@+id/lbl_address_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/login_btn_txt_size"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="22dp"
                app:layout_constraintLeft_toRightOf="@+id/lbl_address"
                app:layout_constraintTop_toBottomOf="@+id/lbl_location_value"
                android:layout_marginStart="21dp" />

            <TextView
                android:id="@+id/lbl_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="20dp"
                android:text="Contact : "
                android:textSize="@dimen/login_btn_txt_size"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_address"
                android:layout_marginStart="51dp" />

            <TextView
                android:id="@+id/lbl_contact_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/login_btn_txt_size"
                app:layout_constraintLeft_toRightOf="@+id/lbl_contact"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@+id/lbl_address_value"
                android:layout_marginStart="21dp" />

            <TextView
                android:id="@+id/lbl_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textStyle="bold"
                android:textSize="@dimen/login_btn_txt_size"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.035"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/imgbtn_edit_profile"
                android:elevation="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="230dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ok_button_dialog_states"
                android:clickable="true"
                app:layout_constraintLeft_toRightOf="@+id/lbl_profile"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/edit_img" />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_below="@id/layout_constraint_profile"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:elevation="5dp">
            <TextView
                android:id="@+id/lbl_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="@dimen/login_btn_txt_size"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/layout_constraint_change_password_info"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@+id/lbl_change_password"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.504">

                <TextView
                    android:id="@+id/lbl_error_confirm_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_confirm_password" />

                <TextView
                    android:id="@+id/lbl_error_current_password"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_current_password" />

                <TextView
                    android:id="@+id/btn_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    app:layout_constraintLeft_toRightOf="@+id/btn_cancel"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_error_confirm_password"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:clickable="true"
                    android:background="@drawable/button_background_states"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/login_btn_txt_size"
                    app:layout_constraintHorizontal_bias="0.494" />

                <TextView
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:layout_marginLeft="36dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:clickable="true"
                    android:background="@drawable/negative_button_background_states"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/login_btn_txt_size"
                    android:layout_marginTop="9dp"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_error_confirm_password" />

                <EditText
                    android:id="@+id/txt_current_password"
                    android:layout_width="@dimen/edit_text_width_login"
                    android:layout_height="@dimen/edit_text_height_login"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:ems="10"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:hint="Current Password"
                    android:inputType="textPassword"
                    android:background="@drawable/edittext_modified_states"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    />

                <EditText
                    android:id="@+id/txt_new_password"
                    android:layout_width="@dimen/edit_text_width_login"
                    android:layout_height="@dimen/edit_text_height_login"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="18dp"
                    android:ems="10"
                    android:background="@drawable/edittext_modified_states"
                    android:hint="New Password"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:inputType="textPassword"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_error_current_password"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/txt_confirm_password"
                    android:layout_width="@dimen/edit_text_width_login"
                    android:layout_height="@dimen/edit_text_height_login"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="26dp"
                    android:ems="10"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/edittext_modified_states"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_new_password"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />
            </android.support.constraint.ConstraintLayout>

            <ImageView
                android:id="@+id/imgbtn_change_password"
                android:layout_width="25dp"
                android:elevation="5dp"
                android:background="@drawable/ok_button_dialog_states"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toRightOf="@+id/lbl_change_password"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/change_password"
                android:clickable="true"/>
        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>
</ScrollView>